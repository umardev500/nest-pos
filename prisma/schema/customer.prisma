model Customer {
    id          Int      @id @default(autoincrement())
    merchant_id Int
    name        String
    email       String   @unique
    phone       String?
    address     String?
    points      Int      @default(0)
    created_at  DateTime @default(now())
    updated_at  DateTime @updatedAt

    // Relationship

    merchant Merchant @relation(fields: [merchant_id], references: [id], onDelete: Cascade)
}
